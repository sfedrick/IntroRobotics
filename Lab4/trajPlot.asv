function [] = plot(T)
%PLOT plots a given homogeneous matrix in 3D space

% Extract rotation and position matrices
R = T(1:3,1:3);
d = T(1:3,4);

% Construct x, y, z lines starting at each point
x = R(1:3,1);
y = R(1:3,2);
z = R(1:3,3);

% Plot actual point in space
plot3(d(1),d(2),d(3),'.k','MarkerSize',30); 

% Plots the axes
linePlot(d,x+d,1,[1,0,0],4);
linePlot(d,y+d,1,[0,1,0],4);
linePlot(d,z+d,1,[0,0,1],4);

end

